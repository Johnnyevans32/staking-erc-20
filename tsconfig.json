{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "mixins/web3.ts",
    "typings/index.d.ts",
    "plugins/vuex.js"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
